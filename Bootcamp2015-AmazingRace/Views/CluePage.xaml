<Page
    x:Class="Bootcamp2015.AmazingRace.Views.CluePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bootcamp2015.AmazingRace.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Foreground="Black" Text="Clues" FontSize="36" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <StackPanel>
            <Button Foreground="Black" FontSize="18" Content="Logout" Click="LogoutClick" Height="52"/>
            <Button Background="Green" Foreground="Black" FontSize="18" Content="View" Click="ViewClick" HorizontalAlignment="Center" Height="52"/>
            <Button Background="Green" Foreground="Black" FontSize="18" Content="Upload Photo" Click="PhotoClick" HorizontalAlignment="Center" Height="52"/>
            <Button Background="Green" Foreground="Black" FontSize="18" Content="Skip" Click="SkipClick" HorizontalAlignment="Center" Height="52"/>
        </StackPanel>
    </Grid>
</Page>
