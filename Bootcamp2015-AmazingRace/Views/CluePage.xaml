<Page
    x:Class="Bootcamp2015.AmazingRace.Views.CluePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bootcamp2015.AmazingRace.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewModels="using:Bootcamp2015.AmazingRace.ViewModels"
    xmlns:micro="using:Caliburn.Micro"
    micro:Bind.AtDesignTime="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Margin="10,10,10,10">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Clue" FontSize="30" Margin="0,0,0,30"/>

            <TextBlock Name="body" Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap" Text="{Binding ClueText, Mode=TwoWay}" Margin="0,0,0,20" />

            <Button FontFamily="Segoe UI Symbol" Content="View map &#xE139;" Command="{Binding ViewMap}"/>
            <Button FontFamily="Segoe UI Symbol" Content="Upload photo &#xE114;" Command="{Binding UploadPhoto}"/>
            <Button FontFamily="Segoe UI Symbol" Content="Skip &#xE2A9;" Command="{Binding Skip}"/>
        </StackPanel>
    </Grid>
</Page>
