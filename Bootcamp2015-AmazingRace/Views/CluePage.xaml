<Page
    x:Class="Bootcamp2015.AmazingRace.Views.CluePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bootcamp2015.AmazingRace.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:viewModels="using:Bootcamp2015.AmazingRace.ViewModels"
    xmlns:micro="using:Caliburn.Micro"
    micro:Bind.AtDesignTime="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Width="Auto" Height="Auto" Margin="10,10,10,10">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Clue" FontSize="30" Margin="0,0,0,30"/>

            <TextBlock Name="body" Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap" Text="{Binding ClueText, Mode=TwoWay}" />

            <Button Content="View map" Command="{Binding ViewMap}"/>
            <Button Content="Upload photo" Command="{Binding UploadPhoto}"/>
            <Button Content="Skip" Command="{Binding Skip}"/>
        </StackPanel>
    </Grid>
</Page>
